<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivServiceBackground"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_service_bg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivServiceIcon"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:adjustViewBounds="true"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ivServiceBackground"
        app:layout_constraintEnd_toEndOf="@+id/ivServiceBackground"
        app:layout_constraintStart_toEndOf="@+id/ivServiceBackground"
        app:layout_constraintTop_toTopOf="@+id/ivServiceBackground"
        tools:src="@drawable/ic_service_add_plus" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCategoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:textColor="@color/patient_doctor_header"
        android:textSize="@dimen/_9ssp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/ivServiceBackground"
        app:layout_constraintEnd_toEndOf="@+id/ivServiceBackground"
        app:layout_constraintStart_toStartOf="@+id/ivServiceBackground"
        tools:text="Dental \nConsultant" />

</androidx.constraintlayout.widget.ConstraintLayout>